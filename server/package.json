{
  "name": "hearts-server",
  "version": "1.0.0",
  "description": "A server for my hearts game.",
  "main": "./build/src/server.js",
  "scripts": {
    "clean": "rm -rf ./node_modules ./build && rm ./package-lock.json",
    "tsc": "tsc",
    "pretest": "npx eslint . --fix",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/**/*.ts'",
    "build": "npm run tsc && npm link typescript && npm test",
    "prestart": "npm run build",
    "start": "node ./build/src/server.js",
    "start-skip-build": "node ./build/src/server.js"
  },
  "author": "Oliver Pavletic",
  "license": "MIT",
  "dependencies": {
    "@types/chai": "^4.2.14",
    "@types/cookie": "^0.4.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/mocha": "^8.0.4",
    "@types/socket.io": "^2.1.11",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "chai": "^4.2.0",
    "cookie": "^0.4.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "emoji-mart": "^3.0.0",
    "eslint": "^7.14.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "express": "^4.17.1",
    "mocha": "^8.2.1",
    "socket.io": "^2.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2",
    "uuid": "^8.3.1"
  },
  "engines": {
    "node": "10.x"
  }
}
